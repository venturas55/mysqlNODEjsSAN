<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/balizas/edit/{{baliza.nif}}" method="POST">
                        <div class="form-group"><input value="{{baliza.nif}}" class="form-control" type="text" name="nif" placeholder="NIF"autofocus /> </div>
                        <div class="form-group"><input value="{{baliza.num_internacional}}" class="form-control" type="text" name="num_internacional" placeholder="num_internacional"  /> </div>
                        <div class="form-group"><input value="{{baliza.tipo}}" class="form-control" type="text" name="tipo" placeholder="tipo"  /> </div>
                        <div class="form-group"><input value="{{baliza.telecontrol}}" class="form-control" type="text" name="telecontrol" placeholder="telecontrol" />  </div>
                        <div class="form-group"><input value="{{baliza.apariencia}}" class="form-control" type="text" name="apariencia" placeholder="apariencia"  />  </div>
                        <div class="form-group"><input value="{{baliza.periodo}}" class="form-control" type="number" name="periodo" placeholder="periodo"/> </div>
                        <div class="form-group"><input value="{{baliza.caracteristica}}" class="form-control" type="text" name="caracteristica" placeholder="caracteristica" /> </div>
                        <button class="btn btn-success btn-block">Guardar</button>
                 </form>
            </div>
        </div>
    </div>
</div>

